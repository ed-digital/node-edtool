{
  "include": ["**.ts"],
  "exclude": ["node_modules", "firefunctions"],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "lib": ["es2017", "es2015", "dom", "es6"],
    "outDir": "lib",
    "esModuleInterop": true,
    "types": ["node"]
  }
}
